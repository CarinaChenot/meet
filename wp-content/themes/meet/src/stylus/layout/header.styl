.header
  box-shadow 0 5px 100px rgba(37,43,51,.1)
  position fixed
  background-color white
  width 100vw
  display flex
  align-items stretch
  z-index 2

.header-logo
  text-transform uppercase
  margin-left site-margin
  padding 1rem 0
  width 9vw

  img
    height 18px
    vertical-align sub

.main-nav
  margin-left 1vw
  display flex
  align-items stretch

.nav-link
  text-transform uppercase
  border 0
  color primary-color
  transition all 0.3s ease-in-out
  display flex
  align-items center
  padding 0 1rem
  &:hover
    color white
    background-color primary-color

.hero
  position fixed
  z-index -1
  height 50vh
  overflow hidden

  img
    width calc(100% + 20px)
    filter blur(5px)
    margin 0 -10px
